{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "allowJs": true,
    "module": "es6",
    "jsx": "react",
    "removeComments": true,
    "strictNullChecks": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "target": "ES5",
    "moduleResolution": "node",
    "lib": ["dom", "es2017", "scripthost", "es2015.promise"],
    "typeRoots": ["src/types/", "node_modules/@types/", "src/**/*"],
    "baseUrl": ".",
    "paths": {
      "@root/*": ["*"],
      "@/*": ["src/*"],
    }
  },
  "include": ["src/**/*"],
  "exclude": ["./src/assets/", "node_modules"]
}
